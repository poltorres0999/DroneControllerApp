<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientActivity">

    <Button
        android:id="@+id/startTelemetry"
        android:layout_width="154dp"
        android:layout_height="53dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="8dp"
        android:onClick="startTelemetry"
        android:text="Start Telemetry"
        app:layout_constraintBottom_toTopOf="@+id/stopTelemetry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <io.github.controlwear.virtual.joystick.android.JoystickView
        android:id="@+id/JoystickLeft"
        android:layout_width="206dp"
        android:layout_height="184dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="172dp"
        android:visibility="visible"
        app:JV_backgroundColor="#FF69B4"
        app:JV_backgroundSizeRatio="98%"
        app:JV_borderColor="#FF69B4"
        app:JV_borderWidth="4dp"
        app:JV_buttonColor="#FF6E40"
        app:JV_buttonSizeRatio="17%"
        app:JV_fixedCenter="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/JoystickRight"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <io.github.controlwear.virtual.joystick.android.JoystickView xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/JoystickRight"
        android:layout_width="193dp"
        android:layout_height="183dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="172dp"
        android:visibility="visible"
        custom:JV_backgroundColor="#FF69B4"
        custom:JV_backgroundSizeRatio="98%"
        custom:JV_borderColor="#FF69B4"
        custom:JV_borderWidth="4dp"
        custom:JV_buttonColor="#FF6E40"
        custom:JV_buttonSizeRatio="15%"
        custom:JV_fixedCenter="false"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintEnd_toEndOf="parent"
        custom:layout_constraintTop_toTopOf="parent"
        custom:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/stopTelemetry"
        android:layout_width="153dp"
        android:layout_height="51dp"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="4dp"
        android:onClick="stopTelemetry"
        android:text="Stop Telemetry"
        app:layout_constraintBottom_toTopOf="@+id/JoystickRight"
        app:layout_constraintEnd_toEndOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="507dp"
        android:layout_height="89dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/altitudeHeader"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="ALTITUDE: "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/estaltH"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:text="cm:" />

            <TextView
                android:id="@+id/estaltV"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:text="na" />

            <TextView
                android:id="@+id/varioH"
                android:layout_width="39dp"
                android:layout_height="wrap_content"
                android:text="m/s:" />

            <TextView
                android:id="@+id/varioV"
                android:layout_width="27dp"
                android:layout_height="wrap_content"
                android:text="na" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/accHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACC"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:id="@+id/accxH"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:text="x:" />

            <TextView
                android:id="@+id/accxV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="na" />

            <TextView
                android:id="@+id/accyH"
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:text="y:" />

            <TextView
                android:id="@+id/accyV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                tools:text="na" />

            <TextView
                android:id="@+id/acczH"
                android:layout_width="31dp"
                android:layout_height="wrap_content"
                android:text="z:" />

            <TextView
                android:id="@+id/acczV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="na" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/gyrHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GYR"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:id="@+id/gyrxH"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:text="x:" />

            <TextView
                android:id="@+id/gyrxV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="na" />

            <TextView
                android:id="@+id/gyryH"
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:text="y:" />

            <TextView
                android:id="@+id/gyryV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                tools:text="na" />

            <TextView
                android:id="@+id/girzH"
                android:layout_width="31dp"
                android:layout_height="wrap_content"
                android:text="z:" />

            <TextView
                android:id="@+id/gyrzV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="na" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/magHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MAG"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:id="@+id/magxH"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:text="x:" />

            <TextView
                android:id="@+id/magxV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="na" />

            <TextView
                android:id="@+id/magyH"
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:text="y:" />

            <TextView
                android:id="@+id/magyV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                tools:text="na" />

            <TextView
                android:id="@+id/magzH"
                android:layout_width="31dp"
                android:layout_height="wrap_content"
                android:text="z:" />

            <TextView
                android:id="@+id/magzV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="na" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="122dp"
        android:layout_height="82dp"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/JoystickRight"
        app:layout_constraintHorizontal_bias="0.593"
        app:layout_constraintStart_toEndOf="@+id/JoystickLeft"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2"
        app:layout_constraintVertical_bias="0.27">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/throttleH"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:text="Throttle:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/throttleV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="na" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/yawH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yaw:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/yawV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="na" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/pitchH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pitch:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/pitchV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="na" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/rollH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Roll:"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:id="@+id/rollV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="na" />
        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>